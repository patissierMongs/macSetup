// ═══════════════════════════════════════════════════════════════
// Zellij Configuration (Prefix 방식, Alt 충돌 제거)
// Prefix: Ctrl+g  (원하면 "Ctrl a" 등으로 변경 가능)
// 목적: AeroSpace (Alt+h/j/k/l, Alt+숫자 등) 과 모든 충돌 제거
// 사용법 예: Ctrl+g 누른 뒤 h (포커스 왼쪽), Ctrl+g r (오른쪽 새 pane)
// ═══════════════════════════════════════════════════════════════

keybinds clear-defaults=true {
    normal {
        // ---- Pane focus ----
        bind "g h" { MoveFocus "Left"; }
        bind "g j" { MoveFocus "Down"; }
        bind "g k" { MoveFocus "Up"; }
        bind "g l" { MoveFocus "Right"; }

        // ---- Pane management ----
        bind "g r" { NewPane "Right"; }   // split right (vertical)
        bind "g d" { NewPane "Down"; }    // split down (horizontal)
        bind "g x" { CloseFocus; }
        bind "g f" { ToggleFocusFullscreen; }
        bind "g z" { TogglePaneFrames; }

        // ---- Tabs ----
        bind "g t" { NewTab; }
        bind "g 1" { GoToTab 1; }
        bind "g 2" { GoToTab 2; }
        bind "g 3" { GoToTab 3; }
        bind "g 4" { GoToTab 4; }
        bind "g 5" { GoToTab 5; }
        bind "g 6" { GoToTab 6; }
        bind "g 7" { GoToTab 7; }
        bind "g 8" { GoToTab 8; }
        bind "g 9" { GoToTab 9; }
        bind "g ]" { GoToNextTab; }
        bind "g [" { GoToPreviousTab; }
        bind "g w" { CloseTab; }
        bind "g R" { SwitchToMode "RenameTab"; }  // Shift + r after prefix

        // ---- Mode switching ----
        bind "g =" { SwitchToMode "Resize"; }
        bind "g m" { SwitchToMode "Move"; }
        bind "g s" { SwitchToMode "Scroll"; }
        bind "g /" { SwitchToMode "EnterSearch"; SearchInput 0; }
        bind "g o" { SwitchToMode "Session"; }

        // ---- Session / quit ----
        bind "g q" { Quit; }

        // ---- Tmux compatibility (single key, no prefix) ----
        bind "Ctrl b" { SwitchToMode "Tmux"; }
    }

    // ---- Resize mode ----
    resize {
        bind "h" "Left" { Resize "Increase Left"; }
        bind "j" "Down" { Resize "Increase Down"; }
        bind "k" "Up" { Resize "Increase Up"; }
        bind "l" "Right" { Resize "Increase Right"; }
        bind "H" { Resize "Decrease Left"; }
        bind "J" { Resize "Decrease Down"; }
        bind "K" { Resize "Decrease Up"; }
        bind "L" { Resize "Decrease Right"; }
        bind "=" { Resize "Increase"; }
        bind "-" { Resize "Decrease"; }
        bind "Esc" "Enter" { SwitchToMode "Normal"; }
    }

    // ---- Move mode ----
    move {
        bind "h" "Left" { MovePane "Left"; }
        bind "j" "Down" { MovePane "Down"; }
        bind "k" "Up" { MovePane "Up"; }
        bind "l" "Right" { MovePane "Right"; }
        bind "n" "Tab" { MovePane; }
        bind "Esc" "Enter" { SwitchToMode "Normal"; }
    }

    // ---- Scroll mode ----
    scroll {
        bind "j" "Down" { ScrollDown; }
        bind "k" "Up" { ScrollUp; }
        bind "Ctrl f" "PageDown" { PageScrollDown; }
        bind "Ctrl b" "PageUp" { PageScrollUp; }
        bind "d" { HalfPageScrollDown; }
        bind "u" { HalfPageScrollUp; }
        bind "Esc" "Enter" { SwitchToMode "Normal"; }
    }

    // ---- Search mode ----
    search {
        bind "j" "Down" { ScrollDown; }
        bind "k" "Up" { ScrollUp; }
        bind "Ctrl f" "PageDown" { PageScrollDown; }
        bind "Ctrl b" "PageUp" { PageScrollUp; }
        bind "n" { Search "down"; }
        bind "N" { Search "up"; }
        bind "c" { SearchToggleOption "CaseSensitivity"; }
        bind "w" { SearchToggleOption "Wrap"; }
        bind "o" { SearchToggleOption "WholeWord"; }
        bind "Esc" "Enter" { SwitchToMode "Normal"; }
    }

    // ---- Session mode ----
    session {
        bind "d" { Detach; }
        bind "Esc" "Enter" { SwitchToMode "Normal"; }
    }

    // ---- Tmux mode ----
    tmux {
        bind "d" { NewPane "Down"; SwitchToMode "Normal"; }
        bind "r" { NewPane "Right"; SwitchToMode "Normal"; }
        bind "z" { ToggleFocusFullscreen; SwitchToMode "Normal"; }
        bind "c" { NewTab; SwitchToMode "Normal"; }
        bind "," { SwitchToMode "RenameTab"; }
        bind "p" { GoToPreviousTab; SwitchToMode "Normal"; }
        bind "n" { GoToNextTab; SwitchToMode "Normal"; }
        bind "h" { MoveFocus "Left"; SwitchToMode "Normal"; }
        bind "l" { MoveFocus "Right"; SwitchToMode "Normal"; }
        bind "j" { MoveFocus "Down"; SwitchToMode "Normal"; }
        bind "k" { MoveFocus "Up"; SwitchToMode "Normal"; }
        bind "o" { FocusNextPane; SwitchToMode "Normal"; }
        bind "x" { CloseFocus; SwitchToMode "Normal"; }
        bind "Esc" "Enter" { SwitchToMode "Normal"; }
    }
}

plugins {
    tab-bar { path "tab-bar"; }
    status-bar { path "status-bar"; }
    strider { path "strider"; }
    compact-bar { path "compact-bar"; }
}

themes {
    tokyo-night {
        fg "#a9b1d6"
        bg "#1a1b26"
        black "#32344a"
        red "#f7768e"
        green "#9ece6a"
        yellow "#e0af68"
        blue "#7aa2f7"
        magenta "#ad8ee6"
        cyan "#449dab"
        white "#787c99"
        orange "#ff9e64"
    }
}

theme "tokyo-night"

default_layout "dev"
default_shell "zsh"
pane_frames false
copy_on_select true
scrollback_editor "/opt/homebrew/bin/nvim"
session_serialization true
serialize_pane_viewport true
mouse_mode true
copy_command "pbcopy"
default_mode "normal"
simplified_ui false
on_force_close "quit"
scroll_buffer_size 10000
clipboard "system"

options {
  keybinds {
    prefix "Ctrl g"
  }
}